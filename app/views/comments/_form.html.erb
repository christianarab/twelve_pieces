<h2>Add comment: </h2>

<%= form_with model: [@article, @article.comments.build] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :rating %><br>
    <%= form.select :rating, [0, 1, 2, 3, 4, 5] %>
  </p>
  <p>
    <%= form.submit "Submit your comment" %>
  </p>
<% end %>
